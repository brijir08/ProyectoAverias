<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <include android:id="@+id/NewFaultToolbar" layout="@layout/toolbar_base" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Nombre"/>

            <EditText
                android:id="@+id/et_NameFault"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:textSize="20sp"
                android:inputType="textCapSentences"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Descripción"/>

            <EditText
                android:id="@+id/et_DescripcionFault"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:textSize="20sp"
                android:inputType="textCapSentences"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Tipo"/>

            <EditText
                android:id="@+id/et_TipoFault"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:hint="Tipo"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Latitud"/>

            <EditText
                android:id="@+id/et_LatitudFault"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Latitud"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Longitud"/>

            <EditText
                android:id="@+id/et_LongitudFault"
                android:layout_width="0dp"
                android:layout_weight="60"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Longitud"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="100"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Imagen"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/iv_ImageFault"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_CreateFault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:textSize="20sp"/>
    </LinearLayout>
</ScrollView>